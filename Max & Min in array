#include <iostream>

using namespace std;


void max(int arr[],int n){
    int max;
    int i;
    max=arr[0];
    for (i=1;i<n;i++){
        if (arr[i]>max){
            max=arr[i];
    
        }
    }
    cout<<"Maximum element is "<<max<<endl;
}

void min(int arr[],int n){
    int min;
    int i;
    min=arr[0];
    for (i=1;i<n;i++){
        if (arr[i]<min){
            min=arr[i];
    
        }
    }
    cout<<"Minimum element is "<<min<<endl;
}
int main()
{
    int arr[]={1,2,3,4,5,6};
    int n=6;
    max(arr,n);
    min(arr,n);
    
}
